<h3>genre</h3>
<%= f.collection_select :genre, Post.genres_i18n.to_a, :first, :last, { include_blank: "--select--" }, { class: "form-control", id: "postGenre" } %>

<div id="postVendor">
  <h3>vendor</h3>
  <%= f.collection_select :vendor_id, @store.vendors, :id, :name, { include_blank: "--select--" }, { class: "form-control" } %>
</div>

<h3>タイトル</h3>
<%= f.text_field :title %>

<h3>本文</h3>
<%= f.text_area :body %>

<%= f.hidden_field :store_id, value: @store.id %>

<script>
  $('#postVendor').hide();
  $('#postGenre').on('change', (e) => {
    if (e.target.value === 'vendor') {
      $('#postVendor').show();
    } else {
      $('#postVendor').hide();
    }
  })
</script>