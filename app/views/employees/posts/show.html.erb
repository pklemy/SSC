<h1>投稿Post show</h1>

<div>
<span><%= @post.employee.email %></span>
  <p>タイトル</p>
  <p>ユーザーネーム：<%= @post.employee.name %></p>
  <span><%= @post.title %></span>
  <span><%= @post.body %></span>
  <p>投稿日時：<%= @post.created_at.strftime('%Y/%m/%d') %></p>
  <%= link_to "編集", edit_employees_post_path(@post.id) %>
  <% if @post.employee == current_employee %>
    <%= link_to "削除", employees_post_path(@post.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
  <% end %>
</div>