<div class="row">
  <div class="col-md-12 offset-md-0 col-sm-8 offset-sm-2">
    <div class="card-body">
      <div class="card-title d-flex justify-content-center">
        <h2>投稿フォーム</h2>
      </div>
      <%= form_with model: @post, url: store_posts_path(@store) do |f| %>
      <%= render 'employees/posts/form', f: f %>
      <div class="row justify-content-center mt-3">
          <%= f.submit '投稿', class: "border border-warning btn btn-secondary btn-lg w-25 mb-2 ml-4"%>
      <% end %>
      </div>
    </div>
  </div>
</div>
