<h1>投稿一覧　index</h1>
<h2>Employees Post </h2>
<table>
  <tr>
    <th>name</th>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
  <% @posts.each do |post| %>
  <tr>
    <td><%= post.employee.name %></td>
    <td><%= link_to post.title, post_path(post.id) %></td>
    <td><%= post.body %></td>
    <td><%= link_to "#{post.comments.count} コメント", post_path(post) %></td>
  </tr>
  <% end %>
</table>

<%= link_to "新規投稿", new_store_post_path(@store), class: "btn btn-primary" %>

<%= link_to "店舗詳細", store_path(@store), class: "btn btn-primary" %>

