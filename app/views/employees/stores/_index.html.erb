
<table class= "table table-bordered">
  <tr>
    <th>店舗</th>
    <th>店舗住所</th>
    <th>店舗電話番号</th>
  </tr>
  <% stores.each do |store| %>
    <tr>
      <td><%= store.name %></td>
      <td><%= link_to store.address, store_path(store.id) %></td>
      <td><%= store.phone %></td>
    </tr>
  <% end %>
</table>
<div class="d-flex justify-content-center">
  <%= link_to "店舗作成", new_store_path(current_employee), class: "btn btn-primary" if current_employee.store_admin? %>
</div>
