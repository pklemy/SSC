<% if current_employee&.store_admin?  && current_employee.stores.blank? %>
  <div class="jumbotron mt-5">
    <h3 class="d-flex justify-content-center mb-5">店舗責任者の方はこちらのボタンへ☟</h3>
    <div class="card">
      <div class="d-flex justify-content-center mt-4">
        <%= link_to "店舗が設定されていません.店舗を登録してください.", new_store_path, class: "btn btn-primary mb-5" %>
      </div>
    </div>
  </div>
<% elsif current_employee %>
  <div class="jumbotron mt-5">
    <h1 class="d-flex justify-content-center mb-5">--- 店舗一覧 ---</h1>
    <div class="card">
      <div class="card-body content-center">
        <h5>あなたの所属店舗はこちら　☞</h5>
        <%= render "employees/stores/index", stores: @stores %>
      </div>
    </div>
  </div>
<% else %>
  <div class="jumbotron mt-5">
    <h1 class="d-flex justify-content-center mb-5">!!　Welcome to --SSC--　!!</h1>
    <h5 class="d-flex justify-content-center mb-5">飲食店専用連絡コミュニティーを使って情報共有や閲覧確認ができるようになっております♪</h5>
      <div class="d-flex justify-content-center">
        <%= link_to "ログイン", new_employee_session_path, class: "btn btn-primary" %>
      </div>
      <div class="d-flex justify-content-center mt-4">
        <%= link_to "ゲストログイン", guest_employee_session_path, class: "btn btn-secondary", method: :post %>
      </div>
    </div>
  </div>
<% end %>
