<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: vendor, url: target_url do |f| %>
        <% if vendor.new_record? %>
          <%= f.hidden_field :store_id, value: store.id %>
        <% end %>
        
        <div class="mb-3">
          <%= f.label :業者名, class: "form-label" %>
          <%= f.text_field :vendor_name, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :発注先URL, class: "form-label" %>
          <%= f.text_field :url, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :電話番号, class: "form-label" %>
          <%= f.text_field :phone, class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= f.label :担当者名, class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="row justify-content-center mt-3">
        <%= f.submit submit_text, class: "border border-warning btn btn-secondary btn-lg mb-1 mr-3 ml-3 btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>